<body>

    <h1>Tic-Tac-Toe vs Arham 🤖</h1>
    <div class="board" id="board"></div>
    <button class="button" onclick="resetGame()">Restart</button>

    <script>
        const board = document.getElementById("board");
        let cells = [];
        let gameBoard = Array(9).fill(null);
        let player = "X";
        let bot = "O";

        // AI Bot Move (Random for simplicity)
        function botMove() {
            let emptyCells = gameBoard.map((v, i) => v === null ? i : null).filter(v => v !== null);
            if (emptyCells.length > 0) {
                let move = emptyCells[Math.floor(Math.random() * emptyCells.length)];
                gameBoard[move] = bot;
                cells[move].innerText = bot;
                if (checkWinner(bot)) {
                    setTimeout(() => alert("Arham wins! 🤖"), 100);
                    return resetGame();
                }
                if (!gameBoard.includes(null)) {
                    setTimeout(() => alert("It's a tie! 😐"), 100);
                    return resetGame();
                }
                player = "X"; // Switch back to player
            }
        }

        // Check Winner
        function checkWinner(symbol) {
            const winningCombos = [
                [0, 1, 2], [3, 4, 5], [6, 7, 8], // Rows
                [0, 3, 6], [1, 4, 7], [2, 5, 8], // Columns
                [0, 4, 8], [2, 4, 6]  // Diagonals
            ];
            return winningCombos.some(combo => combo.every(index => gameBoard[index] === symbol));
        }

        // Handle Player Click
        function playerMove(index) {
            if (!gameBoard[index]) {
                gameBoard[index] = player;
                cells[index].innerText = player;
                if (checkWinner(player)) {
                    setTimeout(() => alert("You win! 🎉"), 100);
                    return resetGame();
                }
                if (!gameBoard.includes(null)) {
                    setTimeout(() => alert("It's a tie! 😐"), 100);
                    return resetGame();
                }
                player = bot;
                setTimeout(botMove, 500);
            }
        }

        // Reset Game
        function resetGame() {
            gameBoard.fill(null);
            cells.forEach(cell => cell.innerText = "");
            player = "X";
        }

        // Create Board
        function createBoard() {
            for (let i = 0; i < 9; i++) {
                let cell = document.createElement("div");
                cell.classList.add("cell");
                cell.addEventListener("click", () => playerMove(i));
                board.appendChild(cell);
                cells.push(cell);
            }
        }

        createBoard();
    </script>

</body>
</html>
